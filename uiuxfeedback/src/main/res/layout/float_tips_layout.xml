<?xml version="1.0" encoding="utf-8"?>
<com.github.wzf.uiuxfeedback.MaskContainer android:id="@+id/relative_layout"
                                           xmlns:android="http://schemas.android.com/apk/res/android"
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content">

    <View
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:focusable="true"
        android:focusableInTouchMode="true" />
    <RelativeLayout
        android:id="@+id/tools_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/button_open"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="0dp"
            android:src="@drawable/ps02"
            android:layout_alignParentLeft="true"
        />
        <ImageView
            android:id="@+id/image_gq"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="0dp"
            android:src="@drawable/ps_gq"
            android:layout_alignParentLeft="true"
        />

        <LinearLayout
            android:id="@+id/layout_tools"
            android:layout_width="190dp"
            android:layout_height="32dp"
            android:layout_alignTop="@id/button_open"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/float_menu_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/button_draw"
                android:layout_width="29dp"
                android:layout_height="25dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/ps06"
            />
            <ImageView
                android:id="@+id/button_text"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="18dp"
                android:src="@drawable/ps08"
            />
            <ImageView
                android:id="@+id/button_record"
                android:layout_width="29dp"
                android:layout_height="25dp"
                android:layout_marginLeft="18dp"
                android:src="@drawable/record_selector"
                android:visibility="gone"
            />
            <ImageView
                android:id="@+id/button_undo"
                android:layout_width="26dp"
                android:layout_height="25dp"
                android:layout_marginLeft="18dp"
                android:src="@drawable/undo_selector"
            />
            <ImageView
                android:id="@+id/button_confirm"
                android:layout_width="21dp"
                android:layout_height="25dp"
                android:layout_marginLeft="18dp"
                android:src="@drawable/done_selector"
            />
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout android:id="@+id/progressBarPanel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</com.github.wzf.uiuxfeedback.MaskContainer>
